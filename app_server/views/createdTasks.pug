extends layout

block style
    style.
        .form-container {
            width: 50%;
            padding-bottom: 50px;
        }

        .accordion {
            background-color: rgb(50, 50, 50);
            color: white;
            cursor: pointer;
            width: 85%;
            margin: 0 auto;
            text-align: left;
            border-bottom: 1px solid #e69b22;
            outline: none;
            border-radius: 0px;
            transition: 0.4s;
            display: block;
        }

        .accordion>p {
            margin: 0;
            padding: 15px 50px;
            font-size: 20px;
            font-weight: bold;
        }

        .accordion p span {
            float: right;
        }

        .accordion:hover {
            filter: brightness(120%);
        }
        
        .accordion p span::after {
            content: '+';
            color: white;
            font-weight: normal;
            font-size: 20px;
            float: right;
            margin-left: 5px;
        }

        .active p span::after {
            content: "-";
        }

        .panel {
            width: 85%;
            text-align: left;
            margin: 0 auto;
            background-color: rgb(100, 100, 100);
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
        }

        .panel p {
            padding: 0 50px;
        }

        .flex {
            display: flex;
            justify-content: space-between;
        }

        .complete {
            width: 80%;
            float: none !important;
            margin: 0 0 20px 0;
        }

        .container {
            overflow: auto;
            text-align: center;
            padding: 0 0 20px 0;
        }

        .container form {
            display: inline;
        }

        .sort {
            width: 125px;
            height: 30px;
            margin: 0 25px;
            font-size: 12px !important;
            padding: 0;
            float: none !important;
        }

block content
    div.form-container(style='text-align: center')
        h1(style='margin-bottom: 20px') WELCOME #{user.fname.toUpperCase()} - CREATED TASKS
        if(tasks.length)
            .container
                form(action='/sort' method='post')
                    button.sort(name='sort' value='sortAuto' type='submit') Auto Sort
                form(action='/sort' method='post')
                    button.sort(name='sort' value='sortDate' type='submit') Sort By Date
                form(action='/sort' method='post')
                    button.sort(name='sort' value='sortName' type='submit') Sort By Name
            each task in tasks
                div.accordion 
                    p #{task.title}
                        if(task.complete)
                            span(style='color: green') COMPLETE
                        else
                            span(style='color: red') INCOMPLETE
                div.panel
                    p.flex
                        span 
                            strong Title:
                            |  #{task.title} 
                        span 
                            strong Priority:
                            |  #{task.priority}
                        span 
                            strong Due:
                            |  #{task.due}
                    p
                        strong Dependencies:
                        br
                        span.flex
                            each dep in task.dependencies
                                span #{dep}
                    p
                        strong Description: 
                        br 
                        | #{task.description}
                    form(style='text-align: center' action='/created-tasks' method='post')
                        if(!task.complete)
                            button.complete.cnclBtn(type='submit' name='taskTitle' value=task.title) Delete
                        else
                            button.complete(type='submit' name='taskTitle' value=task.title) Finalize
        else
            p No Created Tasks
            
block scripts
    script(src='/javascripts/accordion.js')